{
  "name": "event-manager",
  "version": "1.0.0",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "cross-env NODE_ENV=test mocha --recursive \"./test/**/*.test.ts\"",
    "prebuild": "rimraf build",
    "lint": "yarn run lint:format && yarn run lint:quality",
    "lint:fix": "yarn run lint:format:fix && yarn run lint:quality:fix",
    "lint:format": "yarn run precommit:format \"./**/*.ts\"",
    "lint:quality": "yarn run precommit:quality src/**/*.ts test/**/*.ts",
    "lint:format:fix": "yarn run lint:format --write",
    "lint:quality:fix": "yarn run lint:quality --fix",
    "precommit:format": "prettier --check",
    "precommit:quality": "tslint"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.3.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "yarn run precommit:format",
    "src/**/*.ts": "yarn run precommit:quality"
  }
}